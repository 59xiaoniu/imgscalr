<project name="imgscalr Java Library" default="dist">
	<property name="dir.src" value="src/main/java" />
	<property name="dir.bin" value="bin" />
	<property name="dir.dist" value="dist" />
	<property name="dir.javadoc" value="${dir.dist}/javadoc" />

	<property name="name.file" value="imgscalr-lib" />

	<property name="version.major" value="1" />
	<property name="version.minor" value="1" />

	<target name="clean">
		<delete dir="${dir.bin}" />
		<delete dir="${dir.dist}" />
	</target>

	<target name="compile" depends="clean">
		<mkdir dir="${dir.bin}" />
		<javac srcdir="${dir.src}" destdir="${dir.bin}" source="1.5" />
		<copy todir="${dir.bin}">
			<fileset dir="${dir.src}">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>

	<target name="javadoc">
		<delete dir="${dir.javadoc}" />
		<mkdir dir="${dir.javadoc}" />
		<javadoc sourcepath="${dir.src}" destdir="${dir.javadoc}" author="true" windowtitle="imgscalr v${version.major}.${version.minor} - Java Image Scaling Library" footer="Copyright 2010 The Buzz Media, LLC" link="http://download.oracle.com/javase/6/docs/api" linksource="true" package="true" source="1.5" use="true" />
	</target>

	<target name="dist" depends="compile,javadoc">
		<mkdir dir="${dir.dist}" />
		<jar basedir="${dir.bin}" destfile="${dir.dist}/${name.file}.jar" compress="no" />
		<copy file="README" todir="${dir.dist}" />
		<copy file="LICENSE" todir="${dir.dist}" />
		<zip compress="yes" basedir="${dir.src}" destfile="${dir.dist}/${name.file}-src.zip" />
		<zip compress="yes" basedir="${dir.dist}" destfile="${dir.dist}/${name.file}-${version.major}.${version.minor}.zip" />
	</target>
</project>